<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#807B6F"
    android:padding="10dp"
    tools:context="com.example.notas_rapidas.UI.Activities.MainActivity">

    <TextView
        android:id="@+id/notaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" NOTAS"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnAgregarNotas"
        android:layout_below="@id/notaTitulo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgregarNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:text="Agregue una nueva Nota"
        android:textColor="#4CAF50" />


</RelativeLayout>